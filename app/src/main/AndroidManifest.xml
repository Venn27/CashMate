<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cashmate">

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CashMate">

        <activity
            android:name=".activities.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activities.IncomeActivity" />
        <activity android:name=".activities.ExpenseActivity" />
        <activity android:name=".activities.BalanceReportActivity" />
        <activity android:name=".activities.BudgetActivity" />
        <activity android:name=".activities.BusinessTransactionActivity" />
        <activity android:name=".activities.ProfitLossReportActivity" />
        <activity android:name=".activities.SettingsActivity"/>
        <activity android:name=".activities.SplashActivity"/>

    </application>

</manifest>